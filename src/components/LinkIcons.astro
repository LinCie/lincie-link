---
import { Icon } from "astro-icon/components";

interface IIcons {
  name: string;
  href: string;
}

const icons: IIcons[] = [
  { name: "youtube", href: "https://www.youtube.com/watch?v=dQw4w9WgXcQ" },
  {
    name: "spotify",
    href: "https://open.spotify.com/user/31oyxnawj25zik4xbwog3emhjsmi",
  },
  { name: "github", href: "https://github.com/LinCie" },
  {
    name: "linkedin",
    href: "https://www.linkedin.com/in/lincie",
  },
  {
    name: "steam",
    href: "https://steamcommunity.com/id/LinCie",
  },
];
---

<div
  class="bg-background/10 flex items-center justify-center gap-2 rounded-2xl p-6 shadow-2xl backdrop-blur-sm"
>
  {
    icons.map((icon) => (
      <a href={icon.href} aria-label={icon.name} target="_blank">
        <Icon
          name={icon.name}
          class="text-foreground size-9 transition-opacity hover:opacity-80"
        />
      </a>
    ))
  }
</div>
